@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1>Specialties</h1>

@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
}

@foreach (Specialty spec in Model)
{
  <li>@Html.ActionLink($"{spec.SpecialtyName}", "Details", new { id = spec.SpecialtyId })</li>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>