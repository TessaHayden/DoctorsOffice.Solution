@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Patient>;
<h1>List of patients</h1>

@if (@Model.Count == 0)
{
  <h3>No patients have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Patient patient in Model)
    {
      <li>@Html.ActionLink($"{patient.PatientName}", "Details", new { id = patient.PatientId }) | @patient.Doctors.DoctorName
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Create new patient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>