@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1>The List of Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No Doctors have been added yet!</h3>
  <p>@Html.ActionLink("Create doctor profile", "Create")</p>
}

<ul>
  @foreach (Doctor doctor in Model)
  {
    <li>@Html.ActionLink($"{doctor.DoctorName}", "Details", new { id = doctor.DoctorId })</li>
  }
</ul>
<p>@Html.ActionLink("Create doctor profile", "Create")</p>
<p>@Html.ActionLink("See patients", "Index", "Patients")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>